<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.konnectcore.bean.Forum" table="forums">
        <id name="forumid" type="java.lang.String">
            <column name="forumid" />
            <generator class="uuid" />
        </id>
        <property name="forumname" type="java.lang.String">
            <column name="forumname" />
		</property>
		<property name="category" type="java.lang.String">
            <column name="category" />
		</property>
		
		<property name="userid" type="java.lang.String">
            <column name="userid" />
		</property>
		
		<property name="description" type="java.lang.String">
            <column name="description" />
		</property>
		
		<property name="time" type="java.sql.Timestamp">
            <column name="time" />
		</property>
		
		<property name="commentcount" type="int">
            <column name="commentcount" />
		</property>
		
    </class>
</hibernate-mapping>